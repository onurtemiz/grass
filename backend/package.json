{
  "name": "grass-backend",
  "version": "0.0.1",
  "description": "Backend for Grass Application",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon index.js",
    "start": "NODE_ENV=production node index.js",
    "build:ui": "rm -rf build && cd ../frontend && npm run build --prod && cp -r build ../backend/",
    "deploy": "cd ../ && git subtree push --prefix backend heroku master && cd ./backend",
    "deploy:full": "npm run build:ui && git add . && git commit -am 'buildui' && npm run deploy",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "coverage": "npm test -- --coverage"
  },
  "author": "Onur Temiz",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.23.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.13",
    "mongoose-unique-validator": "^2.0.3",
    "rate-limiter-flexible": "^2.1.7",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "jest": "^26.0.1",
    "mongodb-memory-server": "^6.6.1",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
