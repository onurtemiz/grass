{
  "name": "grass-backend",
  "version": "0.0.1",
  "description": "Backend for Grass Application",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=dev nodemon index.js",
    "start": "NODE_ENV=prod node index.js",
    "build:ui": "rm -rf build && cd ../frontend && npm run build --prod && cp -r build ../backend/",
    "deploy": "cd ../ && git subtree push --prefix backend heroku master && cd ./backend",
    "deploy:full": "npm run build:ui && git add . && git commit -am 'buildui' && npm run deploy",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "coverage": "npm test -- --coverage"
  },
  "author": "Onur Temiz",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.20.0",
    "bcrypt": "^4.0.1",
    "cheerio": "^1.0.0-rc.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.27.0",
    "mongoose": "^5.10.2",
    "mongoose-unique-validator": "^2.0.3",
    "nodemailer": "^6.4.11",
    "randomstring": "^1.1.5",
    "rate-limiter-flexible": "^2.1.10",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "jest": "^26.4.2",
    "mongodb-memory-server": "^6.6.7",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": "14.x"
  }
}
